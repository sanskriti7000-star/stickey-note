{
  "manifest_version": 3,
  "name": "Whimsy Notes",
  "version": "1.0",
  "description": "Add draggable sticky notes to any webpage!",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Add a Whimsy Note"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
